function toggleGraderSection(id){
	if(document.getElementById("section-"+id+"-checkbox").checked){
	    document.getElementById("section-"+id+"-button").style.display = "block";
  	} else {
  		document.getElementById("section-"+id+"-button").style.display = "none";
  	}
}
