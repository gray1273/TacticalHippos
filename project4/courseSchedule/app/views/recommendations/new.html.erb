<h1>Add new Recommendation</h1>
<%= form_for @recommendation do |f| %>
  <div class="field">
    <%= f.label "Student" %><br />
    <%= f.text_field :user_id%>
  </div>
  <div class="field">
    <%= f.label :course %><br />
    <%= f.text_field :course_id%>
  </div>
  <div class="field">
    <%= f.label :section %><br />
    <%= f.text_field :section_id %>
  </div>
  
  <div class="field">
    <%= f.label "Instructor" %><br />
    <%= f.text_field :instructor_id%>
  </div>
  <div class="field">
    <%= f.label "Description" %><br />
    <%= f.text_field :description%>
  </div>
  
  <label for="cars">Type of Recommendation:</label>
<select name="recommendation type" id="cars">
    <option value= :recommendation_type >Recommend Student for all sections of course</option>
    <option value= recommendation_type >Request student for specific sections with instructor</option>
  </optgroup>
  <br><%=f.submit "Create"%>
<%end%>
<%= link_to 'Back', {:action => 'index'} %>
